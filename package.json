{
  "name": "@aics/template-npm-package",
  "engines": {
    "node": "12.x",
    "npm": "6.x"
  },
  "version": "0.1.0",
  "description": "An AICS template for NPM packages.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "browser": "dist/index.js",
  "types": "type-declarations",
  "scripts": {
    "build": "npm-run-all --print-label clean --parallel bundle transpile:commonjs transpile:es generateTypes",
    "bundle": "NODE_ENV=production webpack --config webpack.config.js",
    "clean": "rimraf es lib dist type-declarations",
    "format": "prettier --write src/**/*",
    "generateTypes": "tsc -p tsconfig.base.json --emitDeclarationOnly",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx}",
    "test": "BABEL_ENV=commonjs TS_NODE_FILES=true TS_NODE_PROJECT=tsconfig.commonjs.json mocha --opts mocha.opts --recursive src/**/*.test.*",
    "transpile:commonjs": "TS_NODE_PROJECT=tsconfig.commonjs.json BABEL_ENV=commonjs babel src --out-dir lib --extensions .ts,.tsx,.js,.jsx --ignore src/**/*.test.ts",
    "transpile:es": "TS_NODE_PROJECT=tsconfig.es.json babel src --out-dir es --extensions .ts,.tsx,.js,.jsx --ignore src/**/*.test.ts",
    "typeCheck": "tsc --noEmit"
  },
  "files": [
    "es",
    "lib",
    "dist",
    "type-declarations",
    "README.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "~7.7",
    "@babel/core": "~7.7",
    "@babel/preset-env": "~7.7",
    "@babel/preset-typescript": "~7.7",
    "@types/chai": "~4.2",
    "@types/mocha": "~5.2",
    "@typescript-eslint/eslint-plugin": "~2.8",
    "@typescript-eslint/parser": "~2.8",
    "babel-loader": "~8.0",
    "chai": "~4.2",
    "eslint": "~6.6",
    "eslint-config-prettier": "~6.7",
    "husky": "~3.1",
    "lint-staged": "~9.4",
    "mocha": "~6.2",
    "npm-run-all": "~4.1",
    "nyc": "~14.1",
    "prettier": "~1.19",
    "rimraf": "~3.0",
    "ts-node": "~8.5",
    "typescript": "~3.7",
    "webpack": "~4.41",
    "webpack-cli": "~3.3"
  },
  "dependencies": {}
}
